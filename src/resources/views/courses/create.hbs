<div class='mt-4'>
    <h3>Đăng khoá học</h3>
    <form method="POST" action="/courses/store">
        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khoá học</label>
            <input name='name' type='text' class='form-control' id='name' />
        </div>
        <div class='mb-3'>
            <label for='description' class='form-label'>Mô tả khoá học</label>
            <input name='description' type='text' class='form-control' id='description' />
        </div>
        <div class='mb-3'>
            <label for='image' class='form-label'>Hình ảnh</label>
            <input name='image' type='text' class='form-control' id='image' />
        </div>
        <div class='mb-3'>
            <label for='videoid' class='form-label'>Video</label>
            <input name='videoid' type='text' class='form-control' id='videoid' />
        </div>
        <div class='mb-3'>
            <label for='level' class='form-label'>Trình độ</label>
            <input name='level' type='text' class='form-control' id='level' />
        </div>

        <button type='submit' class='btn btn-primary'>Thêm khoá học</button>
    </form>
</div>